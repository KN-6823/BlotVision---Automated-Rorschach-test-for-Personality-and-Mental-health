    <script>
           // Function to hide buttons if the user is logged in
        function hideAuthButtons() {
            const userLoggedIn = document.getElementById('userName');

            if (userLoggedIn) {
                const buttonGroup = document.getElementById('buttonGroup');
                if (buttonGroup) {
                    buttonGroup.style.display = 'none';
                }
            }
        }

        document.addEventListener('DOMContentLoaded', hideAuthButtons);


         document.addEventListener('DOMContentLoaded', function () {
        const takeTestBtn = document.getElementById('takeTestBtn');

        if (takeTestBtn) {
            takeTestBtn.addEventListener('click', function () {
                const isLoggedIn = {{#if user}}true{{else}}false{{/if}}; // Check if user is logged in

                if (isLoggedIn) {
                    window.location.href = '/test'; // Redirect to the test page
                } else {
                    alert('First login to take the test.'); // Show popup alert if not logged in
